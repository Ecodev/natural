        "zone.js": "~0.15.1"
    },
    "devDependencies": {
        "@angular/build": "^20.2.2",
        "@angular/cli": "^20.2.2",
        "@angular/compiler-cli": "^20.2.4",
        "@angular/language-service": "^20.2.4",
        "@playwright/test": "^1.55.0",
        "@types/jasmine": "~5.1.9",
        "@types/node": "^22.14.1",
        "angular-eslint": "^20.2.0",
        "eslint": "^9.24.0",
        "jasmine-core": "~5.10.0",
        "jasmine-spec-reporter": "~7.0.0",
        "karma": "~6.4.4",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "^2.2.1",
